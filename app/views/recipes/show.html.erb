<h1> <%= @recipe.name %> </h1>
<%= @recipe.description %>

<h2>Reviews</h2>

<div class="d-flex flex-wrap">
  <% @recipe.reviews.each do |review| %>
    <div class="card" style="width: 33%;">
      <p> Made by: <%= review.user.first_name %> <%= review.user.last_name %></p>
      <p> Rating: <%= review.rating %> / 5 </p>
      <p> <%= review.comment %> </p>
      <div class="avatar-profile">
        <% if review.photo.attached? %>
          <%= cl_image_tag review.photo.key, width: 100, height: 100, crop: :fill %>
        <% end %>
      </div>

      <% if policy(review).destroy? %>
        <%= link_to "Delete this review", recipe_path(review), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>

<div>
   <% if user_signed_in?%>
      <p><%= link_to "Add a review", new_recipe_review_path(@recipe) %></p>
  <% else %>
    <p><%= "Sign in to leave a review" %></p>
  <% end %>
  <p><%= link_to "Go back to recipes", recipes_path(ingredients: params[:ingredients]) %></p>
  <div class="share-buttons">
    <p>Share this recipe with your friends!</p>
    <a href="http://www.facebook.com/sharer.php?u=https://cooknow.club/recipes/<%= @recipe.id %>" target="_blank">
      <i class="fab fa-facebook"></i>
    </a>
    <a href="https://twitter.com/share?url=https://cooknow.club/recipes/<%= @recipe.id %>&amp;text=Share%20this%20recipe!&amp;hashtags=joincooknow" target="_blank">
      <i class="fab fa-twitter"></i>
    </a>
    <a href="mailto:?Subject=Check out this recipe from the Cook Now Club!&amp;Body=I%20saw%20this%20and%20thought%20of%20you!%20 https://cooknow.club/recipes/<%= @recipe.id %>">
      <i class="fas fa-envelope"></i>
    </a>
  </div>
</div>
